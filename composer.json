{
    "name": "luttje/livewire-gloom",
    "description": "Laravel Dusk helpers for working with Livewire",
    "keywords": [
        "luttje",
        "laravel",
        "livewire-gloom"
    ],
    "homepage": "https://github.com/luttje/livewire-gloom",
    "license": "MIT",
    "authors": [
        {
            "name": "luttje",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.14.0",
        "illuminate/contracts": "^10.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0.1",
        "laravel/dusk": "^7.0.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.20",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Luttje\\LivewireGloom\\": "src/",
            "Luttje\\LivewireGloom\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luttje\\LivewireGloom\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-livewire-gloom --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Luttje\\LivewireGloom\\LivewireGloomServiceProvider"
            ],
            "aliases": {
                "LivewireGloom": "Luttje\\LivewireGloom\\Facades\\LivewireGloom"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
