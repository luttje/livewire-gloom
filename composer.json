{
    "name": "luttje/livewire-gloom",
    "description": "Laravel Dusk helpers for working with Livewire",
    "keywords": [
        "luttje",
        "laravel",
        "livewire-gloom"
    ],
    "homepage": "https://github.com/luttje/livewire-gloom",
    "license": "MIT",
    "authors": [
        {
            "name": "luttje",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0",
        "livewire/livewire": "^3.0.3",
        "spatie/laravel-package-tools": "^1.15.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0.1",
        "laravel/dusk": "^7.0.0",
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.9",
        "orchestra/testbench": "^8.0",
        "orchestra/testbench-dusk": "^8.18",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "Luttje\\LivewireGloom\\": "src/",
            "Luttje\\LivewireGloom\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Luttje\\LivewireGloom\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/phpunit tests",
        "test-ci": "vendor/bin/phpunit tests --coverage --ci",
        "test-coverage": "@test --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Luttje\\LivewireGloom\\LivewireGloomServiceProvider"
            ],
            "aliases": {
                "LivewireGloom": "Luttje\\LivewireGloom\\Facades\\LivewireGloom"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
